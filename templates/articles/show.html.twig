{% extends 'base.html.twig' %} {% block title %}Articles {% endblock %} {% block
body %}
<div class="container-fluid mt-5">
  <div class="container">
    <h1>Articles</h1>
    <div>
      <h4>
        Home > Article >
        <span class="qw">
          {{ article.category.name }}
        </span>
      </h4>
    </div>
    <h2 class="my-3">
      {{ article.title }}
    </h2>
    <div class="d-flex mb-3 qw align-items-center">
      <i class="fas fa-circle me-1">
        {{ article.readTime }}
        min read
      </i>
    </div>
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div>
          <div
            class="article-img params-bg"
            style="background-image: url({{asset('/articles/' ~ article.image)}})"
          ></div>
        </div>
      </div>
      <div class="mt-3 col-lg-8 offset-lg-2">
        <p>{{ article.content }}</p>
      </div>
    </div>
  </div>
</div>
{% endblock %}
