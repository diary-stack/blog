{% extends 'admin.base.html.twig' %} {% block title %}Contacts index {% endblock
%} {% block body %}
<h1>Contacts index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Fullname</th>
      <th>Subject</th>
      <th>Email</th>
      <th>Massage</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for contact in contacts %}
    <tr>
      <td>{{ contact.id }}</td>
      <td>{{ contact.fullname }}</td>
      <td>{{ contact.subject }}</td>
      <td>{{ contact.email }}</td>
      <td>{{ contact.massage }}</td>
      <td>
        <button class="btn btn-primary">
          <a href="{{ path('app_contact_show', { id: contact.id }) }}">show</a>
        </button>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="6">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
